---
const { node } = Astro.props;
---

{node && node.rows && (
  <div class="overflow-x-auto my-10 not-prose"> <table class="w-full text-left border-collapse font-['Montserrat']">
      <thead>
         {/* HEADER TABEL */}
        <tr class="bg-[#800000] border-b-2 border-[#600000]">
          {node.rows[0].cells.map((cell) => (
            <th class="px-6 py-4 text-white font-bold uppercase tracking-[0.15em] text-xs">
              {cell}
            </th>
          ))}
        </tr>
      </thead>
      <tbody class="bg-white">
        {/* ISI TABEL */}
        {node.rows.slice(1).map((row, index) => (
          <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors duration-200">
            {row.cells.map((cell) => (
              <td class="px-6 py-4 text-gray-700 text-sm leading-relaxed">
                {cell}
              </td>
            ))}
          </tr>
        ))}
      </tbody>
    </table>

  </div>
)}